<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp" >

        <TextView
            android:id="@+id/idtextViewI2CDevSel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
	        android:layout_marginLeft="25dp"
            android:text="Device"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/idSpinnerI2CDevOnBoard"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            tools:listitem="@android:layout/simple_spinner_item" />

        <TextView
            android:id="@+id/idtextViewI2CModeSel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
	        android:layout_marginLeft="25dp"
            android:text="Mode"
            android:textSize="20px" />

        <Spinner
            android:id="@+id/idSpinnerI2CModes"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            tools:listitem="@android:layout/simple_spinner_item" />

        <Button
            android:id="@+id/idButtonRead"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
	        android:layout_marginLeft="25dp"
            android:textSize="20px"
            android:text="read" />

        <EditText
            android:id="@+id/idEditTextBus"
	        android:layout_marginLeft="25dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
			android:ems="10"
			android:maxLength="1"
			android:inputType="number"
			android:textSize="24px"
			android:textColor="#0009FF"
			android:hint = "bus"
			android:cursorVisible="false" />

        <EditText
            android:id="@+id/idEditTextAddr"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
			android:ems="10"
			android:maxLength="2"
			android:inputType="text"
			android:digits="0123456789ABCDEFabcdef"
			android:textSize="24px"
			android:textColor="#0009FF"
			android:hint = "addr"
			android:cursorVisible="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/idTextViewByteFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
	        android:layout_marginLeft="25dp"
            android:textSize="20px"
            android:text="First: 0x" />

        <EditText
            android:id="@+id/ideditTextByteFirst"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
			android:ems="10"
			android:maxLength="2"
			android:inputType="text"
			android:digits="0123456789ABCDEFabcdef"
			android:textSize="24px"
			android:textColor="#0009FF"
			android:hint = "00"
			android:cursorVisible="false" />

        <TextView
            android:id="@+id/idTextViewByteLast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
	        android:layout_marginLeft="25dp"
            android:textSize="20px"
            android:text="Last: 0x" />

        <EditText
            android:id="@+id/ideditTextByteLast"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
			android:ems="10"
			android:maxLength="2"
			android:inputType="text"
			android:digits="0123456789ABCDEFabcdef"
			android:textSize="24px"
			android:textColor="#0009FF"
			android:hint = "FF"
			android:cursorVisible="false" />

        <TextView
            android:id="@+id/idTextViewCycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
	        android:layout_marginLeft="25dp"
            android:textSize="20px"
            android:text="Cycle/ms" />

        <EditText
            android:id="@+id/ideditTextCycleTime"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
			android:ems="10"
	        android:inputType="number"
			android:maxLength="5"
			android:textSize="24px"
			android:textColor="#0009FF"
			android:hint = "0"
			android:cursorVisible="false" />
        

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/idtextViewByteNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
	        android:layout_marginLeft="25dp"
			android:textSize="20px"
            android:text="Byte.NO: 0x" />

        <EditText
            android:id="@+id/idEditTextByteNo"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.00"
			android:ems="10"
			android:maxLength="2"
			android:inputType="text"
			android:digits="0123456789ABCDEFabcdef"
			android:textSize="24px"
			android:textColor="#0009FF"
			android:cursorVisible="false" />

        <TextView
            android:id="@+id/idtextViewByteVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
	        android:layout_marginLeft="25dp"
			android:textSize="20px"
            android:text="Byte.Val: 0x" />

        <EditText
            android:id="@+id/idEditTextByteVal"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
			android:ems="10"
			android:maxLength="4"
			android:inputType="text"
			android:digits="0123456789ABCDEFabcdef"
			android:textSize="24px"
			android:textColor="#0009FF"
			android:cursorVisible="false" />

        <Button
            android:id="@+id/idbuttonSet"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
	        android:layout_marginLeft="25dp"
            android:textSize="20px"
            android:text="set" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/idtextViewResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
	        android:layout_marginLeft="25dp"
			android:fontFamily="monospace"
			android:scrollbars="vertical"
            android:fadeScrollbars="false"
			android:hint="result"
			android:textSize="16px" />

    </LinearLayout>

</LinearLayout>